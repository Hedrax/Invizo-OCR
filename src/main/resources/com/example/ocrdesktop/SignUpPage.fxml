<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<StackPane prefHeight="720" prefWidth="1080" style="-fx-background-color: #69CAA6;" stylesheets="@../style/style.css"
           xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="com.example.ocrdesktop.ui.LoginController"><!-- Box containing all other children -->
    <VBox alignment="CENTER" layoutX="265" layoutY="100" maxHeight="700.0" maxWidth="500.0" spacing="13.0"
          style="-fx-background-color: #ffffff; -fx-border-radius: 15; -fx-background-radius: 15; -fx-padding: 20; -fx-effect: dropshadow(gaussian, rgba(0, 0, 0, 0.2), 10, 0.5, 0, 0);">
        <ImageView fitHeight="200" fitWidth="200" pickOnBounds="true" preserveRatio="true">
            <Image url="@../images/Logo_black.png"/>
        </ImageView>
        <!-- Google Sign-Up Button -->
        <Pane onMouseClicked="#handleGoogleSignUp" prefHeight="60.0" prefWidth="450.0" styleClass="google-login-pane">
            <Label layoutX="166.39999389648438" layoutY="19.200000762939453" style="-fx-font-size: 18;"
                   text="Sign in with Google"/>
            <Pane layoutX="117.0" layoutY="10.0" style="-fx-background-color: white; -fx-background-radius: 12px;">
                <ImageView fitHeight="40.0" fitWidth="40.0" pickOnBounds="true" preserveRatio="true">
                    <Image url="@../images/logo_google.png"/>
                </ImageView>
            </Pane>
        <cursor>
            <Cursor fx:constant="HAND"/>
        </cursor>
        </Pane>

        <HBox alignment="CENTER" prefWidth="450" spacing="20">
            <Separator prefWidth="150"/>
            <Label style="-fx-font-size: 14; -fx-text-fill: #b3b3b3;" text="Or use Email"/>
            <Separator prefWidth="150"/>
        </HBox>

        <!-- Email Field -->
        <HBox alignment="CENTER" prefWidth="450"
              style="-fx-background-color: #f5f5f5; -fx-border-radius: 5; -fx-background-radius: 5; -fx-padding: 10;">
            <TextField fx:id="usernameTextFiled" focusTraversable="false" prefHeight="50" prefWidth="400"
                       promptText="UserName"
                       style="-fx-background-color: transparent; -fx-border: none; -fx-font-size: 16;"/>
        </HBox>
        <!-- Email Field -->
        <HBox alignment="CENTER" prefWidth="450"
              style="-fx-background-color: #f5f5f5; -fx-border-radius: 5; -fx-background-radius: 5; -fx-padding: 10;">
            <TextField fx:id="organizationTextFiled" focusTraversable="false" prefHeight="50" prefWidth="400"
                       promptText="Organization"
                       style="-fx-background-color: transparent; -fx-border: none; -fx-font-size: 16;"/>
        </HBox>

        <!-- Email Field -->
        <HBox alignment="CENTER" prefWidth="450"
              style="-fx-background-color: #f5f5f5; -fx-border-radius: 5; -fx-background-radius: 5; -fx-padding: 10;">
            <TextField fx:id="emailFieldSignUp" focusTraversable="false" prefHeight="50" prefWidth="400"
                       promptText="Email"
                       style="-fx-background-color: transparent; -fx-border: none; -fx-font-size: 16;"/>
        </HBox>

        <!-- Password Field -->
        <HBox alignment="CENTER" prefWidth="450"
              style="-fx-background-color: #f5f5f5; -fx-border-radius: 5; -fx-background-radius: 5; -fx-padding: 10;">
            <PasswordField fx:id="passwordFieldSignUp" focusTraversable="false" prefHeight="50" prefWidth="400"
                           promptText="Password"
                           style="-fx-background-color: transparent; -fx-border: none; -fx-font-size: 16;"/>
        </HBox>

        <!-- Confirm Password Field -->
        <HBox alignment="CENTER" prefWidth="450"
              style="-fx-background-color: #f5f5f5; -fx-border-radius: 5; -fx-background-radius: 5; -fx-padding: 10;">
            <PasswordField fx:id="confirmPasswordFieldSignUp" focusTraversable="false" prefHeight="50" prefWidth="400"
                           promptText="Confirm Password"
                           style="-fx-background-color: transparent; -fx-border: none; -fx-font-size: 16;"/>
        </HBox>

        <!-- Sign Up Button -->
        <Button onMouseClicked="#signUp" prefHeight="60" prefWidth="450"
                style="-fx-background-color: #000000; -fx-text-fill: white; -fx-font-size: 16; -fx-border-radius: 5; -fx-background-radius: 5;"
                text="SIGN UP"/>

        <!-- Already have an account -->
        <HBox alignment="CENTER" spacing="5">
            <Label style="-fx-font-size: 14; -fx-text-fill: #b3b3b3;" text="Already have an account?"/>
            <Hyperlink onAction="#navigateToLoginPage" style="-fx-font-size: 14; -fx-text-fill: #0078d7;"
                       text="LOG IN"/>
        </HBox>
    </VBox>
</StackPane>
